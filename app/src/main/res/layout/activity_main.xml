<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <!-- Status Bar -->
    <TextView
        android:id="@+id/statusBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="@color/slightlyBlack"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:paddingTop="16dp"
        android:text="Reels"
        android:textColor="#FFFF00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- HorizontalScrollView to hold the icons -->
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/slightlyBlack"
        android:scrollbarThumbHorizontal="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statusBar">

        <!-- LinearLayout to hold the icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Add your clickable icon views here -->
            <ImageView
                android:id="@+id/action"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/fight" />

            <ImageView
                android:id="@+id/history"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/history" />

            <ImageView
                android:id="@+id/western"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/western" />


            <ImageView
                android:id="@+id/sports"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/sports" />

            <ImageView
                android:id="@+id/love"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/love" />

            <ImageView
                android:id="@+id/murder"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/murder" />

            <ImageView
                android:id="@+id/horror"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/horror" />

            <ImageView
                android:id="@+id/war"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:clickable="true"
                android:onClick="onIconClicked"
                android:padding="16dp"
                android:src="@drawable/war" />

        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"

    android:background="@color/slightlyBlack"
    android:scrollbars="horizontal"
        android:scrollbarThumbHorizontal="@color/yellow"
    app:layout_constraintTop_toBottomOf="@id/horizontalScrollView"

    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />



    <!-- Bottom Bar -->

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/slightlyBlack"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/viewBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/slightlyGray"
                android:src="@android:drawable/ic_menu_add" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/slightlyGray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tint="@color/slightlyGray"
                android:src="@android:drawable/ic_menu_edit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/slightlyGray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_delete"
                app:tint="@color/slightlyGray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textColor="@color/slightlyGray"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/viewBottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFF00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
